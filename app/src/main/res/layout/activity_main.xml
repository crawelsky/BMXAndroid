<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="bmx.fablab.ubo.bmxsmartpanel.MainActivity">

    <TextView
        android:id="@+id/alert_view"
        android:layout_width="334dp"
        android:layout_height="73dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:text="hello world !"
        android:textAlignment="center"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/chut_button"
        android:layout_width="180dp"
        android:layout_height="123dp"
        android:text="Chute"
        tools:layout_editor_absoluteX="90dp"
        tools:layout_editor_absoluteY="130dp"
        android:layout_marginTop="43dp"
        android:layout_below="@+id/alert_view"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/start_button"
        android:layout_width="179dp"
        android:layout_height="126dp"
        android:text="Start"
        tools:layout_editor_absoluteX="95dp"
        tools:layout_editor_absoluteY="317dp"
        android:layout_marginTop="48dp"
        android:layout_below="@+id/chut_button"
        android:layout_alignLeft="@+id/chut_button"
        android:layout_alignStart="@+id/chut_button" />

</RelativeLayout>
